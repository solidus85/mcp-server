# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=mcp_documents
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.7

# Database
# For SQLite (default, no setup required):
DATABASE_URL=sqlite:///./data/mcp.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/mcp_db
# For PostgreSQL with async support:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mcp_db

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8090