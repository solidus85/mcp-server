# MCP Server Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ====================
# PostgreSQL Database
# ====================
# Option 1: Full connection string (recommended)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/mcp_db

# Option 2: Separate components (alternative)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mcp_db
# DB_USER=your_username
# DB_PASSWORD=your_secure_password

# To generate a secure password, run:
# openssl rand -base64 32

# ====================
# Server Configuration
# ====================
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# ====================
# API Configuration
# ====================
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# Comma-separated list of valid API keys (optional)
# API_KEYS=key1,key2,key3

# ====================
# Authentication
# ====================
# Generate a secure JWT secret:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# ====================
# Vector Database
# ====================
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=mcp_documents
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ====================
# LLM API Keys
# ====================
# Add your API keys here (optional)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.7

# ====================
# Redis (optional)
# ====================
# REDIS_URL=redis://localhost:6379/0

# ====================
# Monitoring
# ====================
ENABLE_METRICS=true
METRICS_PORT=9090