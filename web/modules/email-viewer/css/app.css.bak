/* Custom styles for Email Viewer */

/* Filter chips */
.filter-chip {
    @apply px-3 py-1 text-sm rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-600 transition cursor-pointer;
}

.filter-chip.active {
    @apply bg-blue-500 text-white hover:bg-blue-600;
}

/* Action buttons */
.action-btn {
    @apply p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition rounded hover:bg-gray-100 dark:hover:bg-gray-700;
}

/* Thread item */
.thread-item {
    @apply p-4 border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-750 cursor-pointer transition;
}

.thread-item.active {
    @apply bg-blue-50 dark:bg-blue-900/20 border-l-4 border-l-blue-500;
}

.thread-item.unread {
    @apply font-semibold;
}

/* Email message card */
.email-card {
    @apply bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 mb-4 transition-all;
}

.email-card:hover {
    @apply shadow-md;
}

.email-card.collapsed .email-body {
    @apply hidden;
}

.email-card.unread {
    @apply border-l-4 border-l-blue-500;
}

/* Avatar */
.avatar {
    @apply w-10 h-10 rounded-full flex items-center justify-center text-white font-semibold text-sm flex-shrink-0;
    min-width: 2.5rem;
    max-width: 2.5rem;
}

/* Toast notifications */
.toast {
    @apply px-4 py-3 rounded-lg shadow-lg flex items-center space-x-3 min-w-[300px] max-w-md animate-slide-in;
}

.toast.success {
    @apply bg-green-500 text-white;
}

.toast.error {
    @apply bg-red-500 text-white;
}

.toast.info {
    @apply bg-blue-500 text-white;
}

/* Animations */
@keyframes slide-in {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes fade-out {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}

.animate-slide-in {
    animation: slide-in 0.3s ease-out;
}

.animate-fade-out {
    animation: fade-out 0.3s ease-out;
}

/* Loading skeleton */
.skeleton {
    @apply animate-pulse bg-gray-200 dark:bg-gray-700 rounded;
}

.skeleton-text {
    @apply h-4 skeleton mb-2;
}

.skeleton-line {
    @apply h-3 skeleton mb-1;
}

/* Custom scrollbar */
.custom-scrollbar::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

.custom-scrollbar::-webkit-scrollbar-track {
    @apply bg-gray-100 dark:bg-gray-800;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
    @apply bg-gray-400 dark:bg-gray-600 rounded-full;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
    @apply bg-gray-500 dark:bg-gray-500;
}

/* Thread connection lines */
.thread-line {
    position: relative;
    padding-left: 2rem;
}

.thread-line::before {
    content: '';
    position: absolute;
    left: 1.25rem;
    top: 2.5rem;
    bottom: -1rem;
    width: 2px;
    @apply bg-gray-300 dark:bg-gray-600;
}

.thread-line:last-child::before {
    display: none;
}

/* Attachment badge */
.attachment-badge {
    @apply inline-flex items-center px-2 py-1 text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded;
}

/* Project badge colors */
.project-badge {
    @apply inline-flex items-center px-2 py-1 text-xs rounded font-medium;
}

.project-color-1 { @apply bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200; }
.project-color-2 { @apply bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200; }
.project-color-3 { @apply bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200; }
.project-color-4 { @apply bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200; }
.project-color-5 { @apply bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200; }

/* Email body text color */
.email-body {
    color: white !important;
}

.email-body p {
    color: white !important;
}

.email-body .prose {
    color: white !important;
}

.email-body .prose p {
    color: white !important;
}

/* Dark mode adjustments */
.dark .thread-item.unread {
    @apply text-white;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    #threadSidebar {
        @apply w-full absolute z-40;
    }
    
    #threadSidebar.hidden-mobile {
        @apply hidden;
    }
    
    #emailViewer {
        @apply w-full;
    }
}